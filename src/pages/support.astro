---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.tsx';
import Support from '../components/Support.astro';
import FAQ from '../components/FAQ.tsx';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Support - HoneyBadger">
  <div class="min-h-screen bg-white">
    <Header client:load />
    <main>
      <!-- Hero Section -->
      <div class="pt-32 pb-12 bg-gradient-to-b from-gray-50 to-white">
        <div class="container-custom">
          <div class="text-center">
            <h1 class="text-4xl md:text-6xl text-gray-900 mb-6">
              We're Here to Help
            </h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              Get the support you need from our dedicated team, available 24/7/365
            </p>
          </div>
        </div>
      </div>

      <!-- Support Section -->
      <section class="section-blue section-padding">
        <Support />
      </section>
      
      <!-- FAQ Section -->
      <section class="section-neutral section-padding">
        <div class="container-custom">
          <div class="text-center mb-12">
            <h2 class="text-4xl md:text-5xl text-gray-900 mb-6">
              Frequently Asked Questions
            </h2>
            <p class="text-lg text-gray-600 max-w-3xl mx-auto">
              Find quick answers to common questions about our services
            </p>
          </div>
        </div>
        <FAQ client:load />
      </section>

      <!-- Additional Support Options -->
      <section class="py-20 bg-gray-50">
        <div class="container-custom">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl text-gray-900 mb-6">
              More Ways to Get Help
            </h2>
          </div>
          <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
            <!-- Email Support -->
            <div class="text-center">
              <div class="bg-accent-100 inline-flex p-4 mb-4">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Email Us</h3>
              <p class="text-gray-600 mb-4">Send us your questions anytime</p>
              <a href="mailto:support@honeybadger.io" class="text-accent-600 hover:text-accent-700 font-medium">
                support@honeybadger.io
              </a>
            </div>

            <!-- Phone Support -->
            <div class="text-center">
              <div class="bg-accent-100 inline-flex p-4 mb-4">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Call Us</h3>
              <p class="text-gray-600 mb-4">Available 24/7 for urgent support</p>
              <a href="tel:1-800-BADGER" class="text-accent-600 hover:text-accent-700 font-medium">
                1-800-BADGER
              </a>
            </div>

            <!-- Live Chat -->
            <div class="text-center">
              <div class="bg-accent-100 inline-flex p-4 mb-4">
                <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
              </div>
              <h3 class="text-xl font-semibold text-gray-900 mb-2">Live Chat</h3>
              <p class="text-gray-600 mb-4">Chat with our support team instantly</p>
              <button class="text-accent-600 hover:text-accent-700 font-medium">
                Start Chat â†’
              </button>
            </div>
          </div>
        </div>
      </section>
    </main>
    <Footer />
  </div>
</BaseLayout>
