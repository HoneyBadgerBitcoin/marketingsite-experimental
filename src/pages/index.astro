---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.tsx';
import ScrollHero from '../components/ScrollHero.tsx';
import ServicesSection from "../components/ServicesSection";
import FeaturesAndReviews from '../components/FeaturesAndReviews.tsx';
import Insights from '../components/Insights.astro';
import NewsletterCTA from '../components/NewsletterCTA.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="HoneyBadger - Buy and Sell Crypto with Cash">
  <div class="min-h-screen bg-white">
    <Header client:load />
    <main>
    <ScrollHero client:load />
      
      <!-- Services Section - Clean white background -->
      <section class="bg-white">
    <ServicesSection />
      </section>
      
      <!-- Features Grid and Reviews Carousel -->
      <section style="background-color: #000000;">
        <FeaturesAndReviews client:load />
      </section>
      
      <!-- Insights - Professional gray background -->
      <Insights />
    </main>
    
    <!-- Full-width Newsletter CTA Section -->
    <NewsletterCTA />
    
    {/* Subtle divider with fade-out effect */}
    <div class="relative">
      <div class="absolute left-0 right-0 top-1/2 -translate-y-1/2 w-full" style="height: 1px; background-image: radial-gradient(50% 816.76% at 50% 50%, #1c1d22 36.7%, rgba(28, 29, 34, 0) 100%)"></div>
    </div>
    
    <Footer />
  </div>
</BaseLayout>
