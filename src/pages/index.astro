---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.tsx';
import ScrollHero from '../components/ScrollHero.tsx';
import TabServices from '../components/TabServices.tsx';
import EnterpriseCrypto from '../components/EnterpriseCrypto.astro';
import Insights from '../components/Insights.astro';
import NewsletterCTA from '../components/NewsletterCTA.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="HoneyBadger - Buy and Sell Crypto with Cash">
  <div class="min-h-screen bg-white">
    <Header client:load />
    <main>
    <ScrollHero client:load />
      
      <!-- Services Section - Clean white background -->
      <section class="bg-white">
        <TabServices client:load />
      </section>
      
      <!-- Built for crypto at scale - Combined Features, Stats & Reviews -->
      <section style="background-color: #000000;">
        <EnterpriseCrypto />
      </section>
      
      <!-- Insights - Professional gray background -->
      <section class="section-mint section-padding">
        <Insights />
      </section>
    </main>
    
    <!-- Full-width Newsletter CTA Section -->
    <NewsletterCTA />
    
    
    <Footer />
  </div>
</BaseLayout>
